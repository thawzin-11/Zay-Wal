{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./built",
    "allowJs": true,
    "strictNullChecks": true,
    "sourceMap": true
  },

  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["node_modules/**/*"],
}